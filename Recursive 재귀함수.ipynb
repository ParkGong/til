    "times = int(input(\"How many times want to curse the beast??: \"))\n",
    "def recurse_beast(a):\n",
    "    if a == 0:\n",
    "        print(\"curse complete!\")\n",
    "    else:\n",
    "        print(\"Fusion!!!(%d times left)\" % a - 1)\n",
    "        recurse_beast(a - 1)\n",
    "        \n",
    "recurse_beast(times)"
